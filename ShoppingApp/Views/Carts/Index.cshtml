@model IEnumerable<ShoppingApp.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cart_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.Product_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cart_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cart_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cart_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
